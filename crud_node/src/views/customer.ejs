<%= console.log(data); %>

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Customers</title>
</head>
<body>

	<form action="/add" method="post">
		<table align="center" border>
			<tbody>
				<tr>
					<td>Name</td>
					<td><input type="text" name="name" placeholder="Name"></td>
				</tr>
				<tr>
					<td>Address</td>
					<td><input type="text" name="address" placeholder="Address"></td>
				</tr>
				<tr>
					<td>Phone</td>
					<td><input type="text" name="phone" placeholder="Phone"></td>
				</tr>
				<tr>
					<td colspan="2"><button type="summit">Save</button></td>
				</tr>
			</tbody>
		</table>
	</form>

	<br>

	<table border align="center">
		<thead>
			<tr>
				<th>No.</th>
				<th>Name</th>
				<th>Address</th>
				<th>Phone</th>
				<th colspan=2>Actions</th>
			</tr>
			<tbody>
				<% if (data) { %>
					<% for (var i=0; i<data.length; i++) { %>
						<tr>
							<td><%= (i+1) %></td>
							<td><%= data[i].name %></td>
							<td><%= data[i].address %></td>
							<td><%= data[i].phone %></td>
							<td>
								<a href="/delete/<%= data[i].id %>">Delete</a>
							</td>
							<td>
								<a href="/update/<%= data[i].id %>">Update</a>
							</td>
						</tr>
					<% } %>

				<% } %>
			</tbody>
		</thead>
	</table>

</body>
</html>